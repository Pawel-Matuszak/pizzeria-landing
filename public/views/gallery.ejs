<!DOCTYPE html>
<html>
<head>
    <title>Home - ADAM'S PIZZA</title>
    <meta charset='UTF-8'>
    <meta name="keywords" content="pizza, restaurant, food">
    <meta name="description" content="Best Pizza in Town">
    <meta name="author" content="PaweÅ‚ Matuszak">
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='icon' href='img/icon.png'>
    <link rel='stylesheet' href='../gallery-style.css'>
    <script src='https://kit.fontawesome.com/321ebabd9d.js' crossorigin='anonymous'></script>
</head>
<body>
    <%- include("_navbar.ejs") %>
    
    <main>
        <div class='gallery'>
            <div class='gallery-element' onclick='openModal(), selectSlide(1)'>
                <img src='./img/gallery/1.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(2)'>
                <img src='./img/gallery/2.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(3)'>
                <img src='./img/gallery/3.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(4)'>
                <img src='./img/gallery/4.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(5)'>
                <img src='./img/gallery/5.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(6)'>
                <img src='./img/gallery/6.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(7)'>
                <img src='./img/gallery/7.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(8)'>
                <img src='./img/gallery/8.jpg'>
            </div>
            <div class='gallery-element' onclick='openModal(), selectSlide(9)'>
                <img src='./img/gallery/9.jpg'>
            </div>
        </div>
        <div id='modal'>
            <span class='modal-exit' onclick='closeModal()'><i class="fas fa-times"></i></span>
            <div class='modal-content'>
                <div class='slides'>
                    <img src='./img/gallery/1.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/2.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/3.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/4.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/5.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/6.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/7.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/8.jpg'>
                </div>
                <div class='slides'>
                    <img src='./img/gallery/9.jpg'>
                </div>
            </div>
            <span class='modal-next' onclick='arrowControl(1)'><i class="fas fa-chevron-right"></i></span>
            <span class='modal-previous' onclick='arrowControl(-1)'><i class="fas fa-chevron-left"></i></span>
        </div>
    </main>

    <%- include("_footer.ejs") %>


    <script src='gallery.js'></script>
</body>
</html>
